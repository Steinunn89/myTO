<h1>All Events</h1>

<%= form_tag events_path, method: :get, remote: true, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
<br>
<br>

<%= form_tag events_path, method: :get do %>
	<%= label_tag :search_location, "Find events nearby"%>
	<%= text_field_tag :search_location, params[:searh_location]%>
	<%= submit_tag 'Submit' %>
<%end%>
<br>
<br>
<button id="current-location"> Find events near me</button>
<br>
<br>

<div id="events">
  <%= render @events %>
</div>


<%=link_to "Add A New Event", new_event_url %>

<div id="events-pagination"><%= paginate @events %></div>

