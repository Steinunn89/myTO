<h1>Add A New Project</h1>

<br>

<%= form_for @event do |f| %>

<div class="main-form">
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>

	<div>
		<%= f.label :venue %>
		<%= f.text_field :venue %>
	</div>

	<div>
		<%= f.label :address %>
		<%= f.text_field :address %>
	</div>

	<div>
		<%= f.label :start_time %>
		<%= f.time_field :start_time, :min => 10, :step => 10 %>
	</div>

	<div>
		<%= f.label :end_time %>
		<%= f.time_field :end_time, :min => 10, :step => 10 %>
	</div>

	<div>
		<%= f.label :start_date %>
		<%= f.date_field :start_date %>
	</div>

	<div>
		<%= f.label :end_date %>
		<%= f.date_field :end_date %>
	</div>

	<div>
		<%= f.label :category %>
		<%= f.collection_select :category_id, Category.order(:name), :id, :name %>
	</div>

	<div>
		<%= f.label :website %>
		<%= f.text_field :website %>
	</div>
	<br>

	<%= f.submit %>
</div>	
<% end %>

<br>
<br>

<%= link_to "Back to Events", events_url %>

